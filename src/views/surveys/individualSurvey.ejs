<!-- this is the admin page to view a survey response.-->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Survey Detail · Ella Rises</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600;700&display=swap"
    rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/styles.css" rel="stylesheet">
</head>

<body>
  <%- include('../../partials/header') %>

  <div class="container">

<!-- slap the guvvy on it -->
    <div class="page-header">
      <h1 class="page-title">Survey Response</h1>
      <p class="page-subtitle">
        Submitted by <strong><%= survey.memberfirstname %> <%= survey.memberlastname %></strong>
      </p>
    </div>

<!-- nabs the ticker, on the ticker. -->    
    <div class="data-card">
      <h5 class="mb-1"><strong>Event:</strong> <%= survey.eventname %></h5>
      <p class="text-muted mb-3">
        Submitted:
        <%= survey.surveysubmissiondate ?
              new Date(survey.surveysubmissiondate).toLocaleString()
              : '-' %>
      </p>

<!-- ... survey scores. -->
      <div class="table-responsive mt-3">
        <table class="table align-middle mb-0">
          <thead>
            <tr>
              <th>Aspect</th>
              <th>Score</th>
            </tr>
          </thead>

          <tbody>
            <tr>
              <td>Satisfaction</td>
              <td><%= survey.surveysatisfactionscore %></td>
            </tr>
            <tr>
              <td>Usefulness</td>
              <td><%= survey.surveyusefulnessscore %></td>
            </tr>
            <tr>
              <td>Instructor</td>
              <td><%= survey.surveyinstructorscore %></td>
            </tr>
            <tr>
              <td>Recommendation</td>
              <td><%= survey.surveyrecommendationscore %></td>
            </tr>

<!-- overall score is calculated. User didn't put it in. -->
            <tr>
              <td><strong>Overall Score</strong></td>
              <td><strong><%= survey.surveyoverallscore %></strong></td>
            </tr>
            <tr>
              <td>Comments</td>
              <td><%= survey.surveycomments || '-' %></td>
            </tr>
          </tbody>
        </table>
      </div>

<!-- because you could have accessed this page from the event survey view or from the all surveys view, this will send you back to the right place. -->
<!-- or it will, once I fix it. I added this comment while it still sent to the wrong place. -->

      <div class="d-flex gap-3 mt-4">
        <!-- Sends you back to the event surveys page or the all surveys page depending on the ref -->
        <% if (ref === 'event') { %>
        <a href="/surveys?eventid=<%= survey.eventid %>" class="btn btn-secondary btn-sm-pill">
          Back to Event Surveys
        </a>
        <% } else { %>
        <a href="/surveys" class="btn btn-secondary btn-sm-pill">
          Back to All Surveys
        </a>
        <% } %>

<!--  !!!  -->
        <form method="POST"
              action="/deleteSurvey/<%= survey.peid %>?redirect=<%= encodeURIComponent('/registration/' + survey.eventid) %>"
              onsubmit="return confirm('Are you sure you want to delete this survey?');">
              <button type="submit" class="btn btn-danger btn-sm-pill">
                Delete Survey
              </button>              
        </form>
      </div>

    </div>

    <div class="footer">
      &copy; <%= new Date().getFullYear() %> Ella Rises · Surveys
    </div>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
