<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %> Â· Ella Rises</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('../../partials/header') %>

  <div class="container mt-4">
    <h2>Survey: <%= eventname %></h2>
    <p class="text-muted"><%= eventdescription %></p>
    <p><strong>Date:</strong> <%= new Date(eventstart).toLocaleString() %> - <%= new Date(eventend).toLocaleString() %></p>
    <p><strong>Location:</strong> <%= eventlocation %></p>

    <form action="/submitSurvey" method="POST">
      <!-- Hidden fields for linkage -->
      <input type="hidden" name="peid" value="<%= peid %>">
      <input type="hidden" name="memberid" value="<%= memberid %>">
      <input type="hidden" name="eventid" value="<%= eventid %>">
      <input type="hidden" name="surveysubmissiondate" value="<%= new Date().toISOString() %>">

      <!-- Survey inputs (1-5) -->
      <div class="mb-3">
        <label for="surveysatisfactionscore" class="form-label">Satisfaction (1-5)</label>
        <input type="number" class="form-control" id="surveysatisfactionscore" name="surveysatisfactionscore" min="1" max="5" required>
      </div>

      <div class="mb-3">
        <label for="surveyusefulnessscore" class="form-label">Usefulness (1-5)</label>
        <input type="number" class="form-control" id="surveyusefulnessscore" name="surveyusefulnessscore" min="1" max="5" required>
      </div>

      <div class="mb-3">
        <label for="surveyinstructorscore" class="form-label">Instructor (1-5)</label>
        <input type="number" class="form-control" id="surveyinstructorscore" name="surveyinstructorscore" min="1" max="5" required>
      </div>

      <div class="mb-3">
        <label for="surveyrecommendationscore" class="form-label">Recommendation (1-5)</label>
        <input type="number" class="form-control" id="surveyrecommendationscore" name="surveyrecommendationscore" min="1" max="5" required>
      </div>

      <div class="mb-3">
        <label for="surveycomments" class="form-label">Comments (optional)</label>
        <textarea class="form-control" id="surveycomments" name="surveycomments" maxlength="1000" rows="4"></textarea>
      </div>

      <!-- Hidden overall score calculated on submission -->
      <input type="hidden" name="surveyoverallscore" id="surveyoverallscore">

      <button type="submit" class="btn btn-primary">Submit Survey</button>
    </form>
  </div>

  <script>
    // Calculate surveyoverallscore as average before form submission
    const form = document.querySelector('form');
    form.addEventListener('submit', (e) => {
      const scores = [
        parseInt(document.getElementById('surveysatisfactionscore').value),
        parseInt(document.getElementById('surveyusefulnessscore').value),
        parseInt(document.getElementById('surveyinstructorscore').value),
        parseInt(document.getElementById('surveyrecommendationscore').value)
      ];
      const avg = scores.reduce((a,b)=>a+b,0) / scores.length;
      document.getElementById('surveyoverallscore').value = avg;
    });
  </script>
</body>
</html>
