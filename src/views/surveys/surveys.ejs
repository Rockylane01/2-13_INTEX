<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Surveys Â· Ella Rises</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/styles.css" rel="stylesheet">
</head>
<body>
  <%- include('../../partials/header') %>

  <div class="container mt-4">
    <h2>Surveys for Event <%= surveys[0] ? surveys[0].EventName : '' %></h2>

    <% if (surveys && surveys.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Overall Score</th>
              <th>Submission Date</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% surveys.forEach(s => { %>
              <tr>
                <td><%= s.memberfirstname %></td>
                <td><%= s.memberlastname %></td>
                <td><%= s.SurveyOverallScore %></td>
                <td><%= s.SurveySubmissionDate ? new Date(s.SurveySubmissionDate).toLocaleString() : '-' %></td>
                <td>
                  <a href="/surveys/<%= s.peid %>" class="btn btn-sm btn-outline-primary">View Survey</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <p class="text-muted">No surveys submitted yet for this event.</p>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
