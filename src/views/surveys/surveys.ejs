<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Surveys · Ella Rises</title>

  <!-- Google Fonts (match all other pages) -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link 
    href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600;700&display=swap" 
    rel="stylesheet"
  >

  <!-- Bootstrap + Styles -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/styles.css" rel="stylesheet">
</head>

<body>
  <%- include('../../partials/header') %>

  <div class="container">

    <!-- PAGE HEADER -->
    <div class="page-header">
      <h1 class="page-title">Event Surveys</h1>
      <p class="page-subtitle">
        Feedback submitted by participants for this event
      </p>
    </div>

    <div class="data-card">
      <% if (surveys && surveys.length > 0) { %>

        <!-- Event Name -->
        <h5 class="mb-3 fw-bold" style="color: var(--ella-charcoal);">
          Event: <%= surveys[0].EventName %>
        </h5>

        <!-- TABLE -->
        <div class="table-responsive">
          <table class="table align-middle mb-0">
            <thead>
              <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Overall Score</th>
                <th>Submitted</th>
                <th></th> <!-- Actions -->
              </tr>
            </thead>

            <tbody>
              <% surveys.forEach(s => { %>
                <tr>
                  <td><%= s.memberfirstname %></td>
                  <td><%= s.memberlastname %></td>
                  <td><%= s.surveyoverallscore %></td>
                  <td>
                    <%= s.surveysubmissiondate 
                        ? new Date(s.surveysubmissiondate).toLocaleString()
                        : '-' 
                    %>
                  </td>

                  <!-- VIEW SURVEY BUTTON -->
                  <td>
                    <a href="/surveys/<%= s.peid %>" 
                       class="btn btn-outline-primary btn-sm-pill">
                      View Survey
                    </a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>

      <% } else { %>
        <p class="text-muted mb-0">No surveys have been submitted for this event yet.</p>
      <% } %>
    </div>

    <div class="footer">
      &copy; <%= new Date().getFullYear() %> Ella Rises · Surveys
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
