<!-- this page should only be visible to logged-in admins. -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %> · Ella Rises</title>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600;700&display=swap"
    rel="stylesheet">

  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    rel="stylesheet">
  <link href="/css/styles.css" rel="stylesheet" />
</head>
<body>
  <%- include('../../partials/header') %>

  <div class="container">
    <div class="page-header">
      <h1 class="page-title">Surveys</h1>
      <p class="page-subtitle">
        Manage and analyze feedback surveys for Ella Rises events and programs.
      </p>
    </div>

    <div class="data-card">
      <div class="search-row">
        <input
          type="text"
          class="form-control"
          placeholder="Search by survey title or event">
        <button class="btn btn-outline-primary btn-sm-pill" type="button">
          Search
        </button>
        <!-- later: only show this button if user is a manager -->
        <button class="btn btn-primary btn-sm-pill ms-auto" type="button">
          Create Survey
        </button>
      </div>

      <div class="table-responsive">
        <table class="table align-middle mb-0">
          <thead>
            <tr>
              <th>Member</th>
              <th>Event</th>
              <th>Overall Score</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% if (surveys && surveys.length > 0) { %>
              <% surveys.forEach(survey => { %>
                <tr>
                  <td><%= survey.memberfirstname %></td>
                  <td><%= survey.eventname %></td>
                  <td><%= survey.surveyoverallscore %></td>
                  <td>
                    <!-- later: wrap these in manager-only checks -->
                    <a href="/surveyView/<%= survey.peid %>" class="btn btn-outline-primary btn-sm-pill">
                      View Response
                    </a>
                    <button class="btn btn-outline-primary btn-sm-pill">
                      Edit
                    </button>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="6" class="text-center text-muted">
                  No surveys to display yet.
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="footer">
      &copy; <%= new Date().getFullYear() %> Ella Rises · Surveys
    </div>
  </div>

  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js">
  </script>
</body>
</html>
