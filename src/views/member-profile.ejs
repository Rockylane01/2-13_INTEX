<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %> · Ella Rises</title>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600;700&display=swap"
    rel="stylesheet">

  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    rel="stylesheet">
  <link href="/css/styles.css" rel="stylesheet" />
</head>
<body>
  <%- include('../partials/header') %>

  <div class="container">
    <div class="page-header">
      <div class="d-flex align-items-center justify-content-between">
        <div>
          <h1 class="page-title">User Profile</h1>
          <p class="page-subtitle">
            View detailed information and accomplishments for <%= user.firstName %> <%= user.lastName %>
          </p>
        </div>
        <a href="/users" class="btn btn-outline-primary">
          <i class="fas fa-arrow-left me-2"></i>Back to Users
        </a>
      </div>
    </div>

    <!-- User Profile Card -->
    <div class="row mb-4">
      <div class="col-lg-8">
        <div class="card profile-card">
          <div class="card-body">
            <div class="d-flex align-items-start">
              <div class="avatar-circle-large me-4">
                <%= user.firstName ? user.firstName[0].toUpperCase() : '?' %>
                <%= user.lastName ? user.lastName[0].toUpperCase() : '' %>
              </div>
              <div class="flex-grow-1">
                <h3 class="card-title mb-1"><%= user.firstName %> <%= user.lastName %></h3>
                <p class="text-muted mb-3"><%= user.email %></p>

                <div class="row">
                  <div class="col-md-6">
                    <div class="profile-info-item">
                      <strong>Role:</strong>
                      <% if (user.role === 'admin') { %>
                        <span class="badge bg-danger ms-2">Administrator</span>
                      <% } else if (user.role === 'manager') { %>
                        <span class="badge bg-info ms-2">Manager</span>
                      <% } else { %>
                        <span class="badge bg-secondary ms-2">User</span>
                      <% } %>
                    </div>
                    <div class="profile-info-item">
                      <strong>Status:</strong>
                      <% if (user.isActive) { %>
                        <span class="badge bg-success ms-2">Active</span>
                      <% } else { %>
                        <span class="badge bg-secondary ms-2">Inactive</span>
                      <% } %>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="profile-info-item">
                      <strong>Member Since:</strong>
                      <span class="ms-2"><%= user.createdAt ? new Date(user.createdAt).toLocaleDateString() : 'N/A' %></span>
                    </div>
                    <div class="profile-info-item">
                      <strong>Last Login:</strong>
                      <span class="ms-2"><%= user.lastLogin ? new Date(user.lastLogin).toLocaleDateString() : 'Never' %></span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Milestones Summary -->
      <div class="col-lg-4">
        <div class="card program-card h-100">
          <div class="card-body text-center">
            <i class="fas fa-trophy fa-3x text-warning mb-3"></i>
            <h5 class="card-title">Milestones Achieved</h5>
            <h2 class="text-warning mb-2"><%= milestones.length %></h2>
            <small class="text-muted">Completed accomplishments</small>
          </div>
        </div>
      </div>
    </div>

    <!-- Accomplished Milestones Section -->
    <div class="data-card">
      <div class="d-flex align-items-center justify-content-between mb-3">
        <h4 class="mb-0">Accomplished Milestones</h4>
        <% if (milestones.length > 0) { %>
          <small class="text-muted"><%= milestones.length %> milestone<%= milestones.length === 1 ? '' : 's' %> completed</small>
        <% } %>
      </div>

      <% if (milestones.length > 0) { %>
        <div class="row">
          <% milestones.forEach(milestone => { %>
            <div class="col-md-6 col-lg-4 mb-4">
              <div class="card milestone-card h-100">
                <div class="card-body">
                  <div class="d-flex align-items-center mb-3">
                    <div class="milestone-icon me-3">
                      <i class="fas fa-check-circle text-success"></i>
                    </div>
                    <div class="flex-grow-1">
                      <h6 class="card-title mb-1"><%= milestone.title %></h6>
                      <small class="text-muted"><%= milestone.participantName %></small>
                    </div>
                  </div>

                  <% if (milestone.description) { %>
                    <p class="card-text small text-muted mb-3"><%= milestone.description %></p>
                  <% } %>

                  <div class="milestone-details">
                    <div class="detail-item">
                      <strong>Type:</strong>
                      <span class="badge bg-primary badge-sm"><%= milestone.type %></span>
                    </div>
                    <% if (milestone.achievementDate) { %>
                      <div class="detail-item">
                        <strong>Achieved:</strong>
                        <span><%= new Date(milestone.achievementDate).toLocaleDateString() %></span>
                      </div>
                    <% } %>
                    <% if (milestone.participantName && milestone.program) { %>
                      <div class="detail-item">
                        <strong>Program:</strong>
                        <span><%= milestone.program %></span>
                      </div>
                    <% } %>
                  </div>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <div class="text-center py-5">
          <i class="fas fa-trophy fa-4x text-muted mb-3"></i>
          <h5 class="text-muted">No Milestones Accomplished Yet</h5>
          <p class="text-muted">This user hasn't completed any milestones yet.</p>
        </div>
      <% } %>
    </div>

    <div class="footer">
      &copy; <%= new Date().getFullYear() %> Ella Rises · User Profile
    </div>
  </div>

  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js">
  </script>
</body>
</html>
