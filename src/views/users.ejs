<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %> · Ella Rises</title>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600;700&display=swap"
    rel="stylesheet">

  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    rel="stylesheet">
  <link href="/css/styles.css" rel="stylesheet" />
</head>
<body>
  <%- include('../partials/header') %>

  <div class="container">
    <div class="page-header">
      <h1 class="page-title">Users</h1>
      <p class="page-subtitle">
        Manage system users and their access permissions for the Ella Rises platform.
      </p>
    </div>

    <!-- Users Summary Cards -->
    <div class="row mb-4">
      <div class="col-md-3 mb-3">
        <div class="card program-card h-100">
          <div class="card-body text-center">
            <i class="fas fa-users fa-3x text-primary mb-3"></i>
            <h5 class="card-title">Total Users</h5>
            <h3 class="text-primary"><%= users ? users.length : 0 %></h3>
            <small class="text-muted">All registered users</small>
          </div>
        </div>
      </div>
      <div class="col-md-3 mb-3">
        <div class="card program-card h-100">
          <div class="card-body text-center">
            <i class="fas fa-crown fa-3x text-warning mb-3"></i>
            <h5 class="card-title">Administrators</h5>
            <h3 class="text-warning"><%= users ? users.filter(u => u.role === 'admin').length : 0 %></h3>
            <small class="text-muted">Admin access</small>
          </div>
        </div>
      </div>
      <div class="col-md-3 mb-3">
        <div class="card program-card h-100">
          <div class="card-body text-center">
            <i class="fas fa-user-shield fa-3x text-info mb-3"></i>
            <h5 class="card-title">Managers</h5>
            <h3 class="text-info"><%= users ? users.filter(u => u.role === 'manager').length : 0 %></h3>
            <small class="text-muted">Management access</small>
          </div>
        </div>
      </div>
      <div class="col-md-3 mb-3">
        <div class="card program-card h-100">
          <div class="card-body text-center">
            <i class="fas fa-user-check fa-3x text-success mb-3"></i>
            <h5 class="card-title">Active Users</h5>
            <h3 class="text-success"><%= users ? users.filter(u => u.isActive).length : 0 %></h3>
            <small class="text-muted">Currently active</small>
          </div>
        </div>
      </div>
    </div>

    <div class="data-card">
      <div class="search-row">
        <input
          type="text"
          class="form-control"
          placeholder="Search by name, email, or role">
        <button class="btn btn-outline-primary btn-sm-pill" type="button">
          Search
        </button>
        <!-- later: only show this button if user is an admin -->
        <button class="btn btn-primary btn-sm-pill ms-auto" type="button">
          Add User
        </button>
      </div>

      <div class="table-responsive">
        <table class="table align-middle mb-0">
          <thead>
            <tr>
              <th>User</th>
              <th>Role</th>
              <th>Status</th>
              <th>Last Login</th>
              <th>Created</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (users && users.length > 0) { %>
              <% users.forEach(user => { %>
                <tr>
                  <td>
                    <div class="d-flex align-items-center">
                      <div class="avatar-circle me-3">
                        <%= user.firstName ? user.firstName[0].toUpperCase() : '?' %>
                        <%= user.lastName ? user.lastName[0].toUpperCase() : '' %>
                      </div>
                      <div>
                        <strong><%= user.firstName %> <%= user.lastName %></strong>
                        <br><small class="text-muted"><%= user.email %></small>
                      </div>
                    </div>
                  </td>
                  <td>
                    <% if (user.role === 'admin') { %>
                      <span class="badge bg-danger">Administrator</span>
                    <% } else if (user.role === 'manager') { %>
                      <span class="badge bg-info">Manager</span>
                    <% } else { %>
                      <span class="badge bg-secondary">User</span>
                    <% } %>
                  </td>
                  <td>
                    <% if (user.isActive) { %>
                      <span class="badge bg-success">Active</span>
                    <% } else { %>
                      <span class="badge bg-secondary">Inactive</span>
                    <% } %>
                  </td>
                  <td><%= user.lastLogin ? new Date(user.lastLogin).toLocaleDateString() : 'Never' %></td>
                  <td><%= user.createdAt ? new Date(user.createdAt).toLocaleDateString() : 'N/A' %></td>
                  <td>
                    <!-- later: wrap these in role-based checks -->
                    <button class="btn btn-outline-primary btn-sm-pill">
                      View
                    </button>
                    <button class="btn btn-outline-primary btn-sm-pill">
                      Edit
                    </button>
                    <% if (user.role !== 'admin') { %>
                      <button class="btn btn-outline-danger btn-sm-pill">
                        Deactivate
                      </button>
                    <% } %>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="6" class="text-center text-muted">
                  No users to display yet.
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="footer">
      &copy; <%= new Date().getFullYear() %> Ella Rises · Users
    </div>
  </div>

  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js">
  </script>
</body>
</html>
