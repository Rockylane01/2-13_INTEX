<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %> · Ella Rises</title>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600;700&display=swap"
    rel="stylesheet">

  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    rel="stylesheet">
  <link href="/css/styles.css" rel="stylesheet"/>
</head>
<body>
<!-- HEADER -->
<%- include('../../partials/header.ejs', { user }) %>

  <div class="container login-wrapper">
    <div class="login-card form-card">
      <div id="login-header" class="page-header mb-3">
        <h1 class="page-title">Sign up</h1>
      </div>
      <% if (typeof error_message !== "undefined" && error_message) { %>
        <div class="alert alert-danger mt-2">
          <%= error_message %>
        </div>
      <% } %>
      

      <!-- SIGN UP FORM -->
      <form action="/signUp" method="POST">
        <div class="mb-3">
            <label for="memberfirstname" class="form-label">First Name</label>
            <input
              type="text"
              class="form-control"
              id="memberfirstname"
              name="memberfirstname"
              required>
        </div>

        <div class="mb-3">
            <label for="memberlastname" class="form-label">Last Name</label>
            <input
              type="text"
              class="form-control"
              id="memberlastname"
              name="memberlastname"
              required>
        </div>

        <div class="mb-3">
            <label for="memberdob" class="form-label">Date of Birth</label>
            <input
              type="date"
              class="form-control"
              id="memberdob"
              name="memberdob"
              required>
        </div>

        <div class="mb-3">
          <label for="memberphone" class="form-label">Phone Number</label>
          <input
            type="number"
            class="form-control"
            id="memberphone"
            name="memberphone"
            min="1000000000" 
            max="9999999999"
            required>
        </div>

        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            type="text"
            class="form-control"
            id="email"
            name="email"
            required>
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input
              type="password"
              class="form-control"
              id="password"
              name="password"
              required>
          </div>

        <div class="mb-3">
            <label for="membercity" class="form-label">City</label>
            <input
              type="text"
              class="form-control"
              id="membercity"
              name="membercity"
              required>
        </div>

        <div class="mb-3">
            <label for="memberstate" class="form-label">State</label>
            <input
              type="text"
              class="form-control"
              id="memberstate"
              name="memberstate"
              required>
        </div>

        <div class="mb-3">
            <label for="memberzip" class="form-label">Zipcode</label>
            <input
              type="text"
              class="form-control"
              id="memberzip"
              name="memberzip"
              required>
        </div>

        <div class="mb-3">
            <label for="memberschooloremployer" class="form-label">School or Employer</label>
            <input
              type="text"
              class="form-control"
              id="memberschooloremployer"
              name="memberschooloremployer"
              required>
        </div>
        
        <div class="mb-3">
            <label for="memberfieldofinterest" class="form-label">Field of Interest</label>
            <select id="memberfieldofinterest" name="memberfieldofinterest" class="form-select" required>
                <option value="">-- Select one --</option>   <!-- placeholder -->
                <option value="STEM">STEM</option>
                <option value="Arts">Arts</option>
                <option value="Both">Both</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary w-100 mt-2">
          Sign up
        </button>
      </form>
      <p id="noAccount">Already registered? <a id="signUp" href="/login">Log in</a></p>
    </div>

    </div>

  <!-- footer details ish -->
  <div>
    <p class="login-footer">© 2025 Ella Rises. All Rights Reserved.</p>
  </div>

  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js">
  </script>
</body>
</html>
