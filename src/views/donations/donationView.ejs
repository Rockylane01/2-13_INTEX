<!-- This page should only be visible to logged-in users. -->
<!-- The CRUD functionality should only be visible/available to admins. -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %> · Ella Rises</title>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600;700&display=swap"
    rel="stylesheet">

  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    rel="stylesheet">
  <link href="/css/styles.css" rel="stylesheet" />
</head>
<body>
  <%- include('../../partials/header') %>

  <div class="container">
    <div class="page-header">
      <h1 class="page-title">Donation Details</h1>
      <p class="page-subtitle">
        Detailed information about donation #<%= donation.donationid %> from <%= donation.memberfirstname %> <%= donation.memberlastname %>
      </p>
    </div>

    <div class="row">
      <!-- Donation Information -->
      <div class="col-md-8">
        <div class="data-card">
          <h5 class="card-title mb-4">Donation Information</h5>

          <div class="row">
            <div class="col-md-6">
              <div class="mb-4">
                <h6 class="text-muted mb-2">Donation Amount</h6>
                <div class="display-6 text-primary fw-bold">
                  $<%= donation.donationamount ? donation.donationamount.toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2}) : '0.00' %>
                </div>
              </div>

              <div class="mb-4">
                <h6 class="text-muted mb-2">Donation Date</h6>
                <p class="mb-0">
                  <i class="fas fa-calendar-alt me-2"></i>
                  <%= donation.donationdate ? new Date(donation.donationdate).toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) : 'N/A' %>
                </p>
              </div>

              <div class="mb-4">
                <h6 class="text-muted mb-2">Donation ID</h6>
                <p class="mb-0 text-muted">#<%= donation.donationid %></p>
              </div>
            </div>

            <div class="col-md-6">
              <div class="mb-4">
                <h6 class="text-muted mb-2">Donor Information</h6>
                <div class="card bg-light">
                  <div class="card-body">
                    <h6 class="card-title"><%= donation.memberfirstname %> <%= donation.memberlastname %></h6>
                    <p class="card-text mb-1">
                      <i class="fas fa-envelope me-2"></i>
                      <%= donation.memberemail %>
                    </p>
                    <% if (donation.memberphone) { %>
                      <p class="card-text mb-1">
                        <i class="fas fa-phone me-2"></i>
                        <%= donation.memberphone %>
                      </p>
                    <% } %>
                    <% if (donation.membercity && donation.memberstate) { %>
                      <p class="card-text mb-0">
                        <i class="fas fa-map-marker-alt me-2"></i>
                        <%= donation.membercity %>, <%= donation.memberstate %>
                      </p>
                    <% } %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Donor Summary -->
      <div class="col-md-4">
        <div class="data-card">
          <h5 class="card-title mb-3">Donor Summary</h5>

          <div class="mb-3">
            <div class="d-flex justify-content-between">
              <span>Total Donations:</span>
              <span class="fw-bold"><%= donorSummary && donorSummary.totalDonations ? donorSummary.totalDonations : 0 %></span>
            </div>
          </div>

          <div class="mb-3">
            <div class="d-flex justify-content-between">
              <span>Total Amount:</span>
              <span class="fw-bold">$<%= donorSummary && donorSummary.totalAmount ? parseFloat(donorSummary.totalAmount).toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2}) : '0.00' %></span>
            </div>
          </div>

          <div class="mb-3">
            <div class="d-flex justify-content-between">
              <span>Average Donation:</span>
              <span class="fw-bold">$<%= donorSummary && donorSummary.averageDonation ? parseFloat(donorSummary.averageDonation).toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2}) : '0.00' %></span>
            </div>
          </div>

          <div class="mb-3">
            <div class="d-flex justify-content-between">
              <span>First Donation:</span>
              <span class="fw-bold"><%= donorSummary && donorSummary.firstDonation ? new Date(donorSummary.firstDonation).toLocaleDateString() : 'N/A' %></span>
            </div>
          </div>

          <div class="mb-3">
            <div class="d-flex justify-content-between">
              <span>Last Donation:</span>
              <span class="fw-bold"><%= donorSummary && donorSummary.lastDonation ? new Date(donorSummary.lastDonation).toLocaleDateString() : 'N/A' %></span>
            </div>
          </div>

          <% if (donation.memberrole) { %>
            <div class="mb-3">
              <div class="d-flex justify-content-between">
                <span>Role:</span>
                <span class="badge bg-secondary"><%= donation.memberrole %></span>
              </div>
            </div>
          <% } %>
        </div>
      </div>
    </div>

    <!-- Other Donations from this Donor -->
    <% if (otherDonations && otherDonations.length > 1) { %>
      <div class="data-card mt-4">
        <h5 class="card-title mb-3">Other Donations from <%= donation.memberfirstname %></h5>
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Date</th>
                <th>Amount</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% otherDonations.forEach(otherDonation => { %>
                <% if (otherDonation.donationid !== donation.donationid) { %>
                  <tr>
                    <td><%= new Date(otherDonation.donationdate).toLocaleDateString() %></td>
                    <td class="fw-bold">$<%= otherDonation.donationamount.toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></td>
                    <td>
                      <a href="/donationView/<%= otherDonation.donationid %>" class="btn btn-sm btn-outline-primary">View</a>
                    </td>
                  </tr>
                <% } %>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    <% } %>

    <!-- Action Buttons Bottom -->
    <div class="mt-4 mb-4">
      <a href="/donations" class="btn btn-outline-primary">Back to Donations</a>
      <button class="btn btn-primary ms-2">Edit Donation</button>
      <button class="btn btn-danger ms-2">Delete Donation</button>
    </div>

    <div class="footer">
      &copy; <%= new Date().getFullYear() %> Ella Rises · Donation Details
    </div>
  </div>

  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js">
  </script>
</body>
</html>
