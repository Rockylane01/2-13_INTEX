<!-- This page is visible to guests. -->
<!-- This page is a mock-up donation form. No need to verify payment info for this build. -->
<!-- However, it does properly update the database, and thus does affect some info on the site. -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
</head>
<body>
  <h1>Make a Donation</h1>

<!-- the form has set requirements for input types so you can't mess it up too bad. Since the "card info" isn't really used, we didn't set params on those. -->

  <form action="/donationform" method="POST">
    <div>
      <label for="donorname">Name for donation:</label>
      <input type="text" id="donorname" name="donorname" required>
    </div>

    <div>
      <label for="donationamount">Donation Amount:</label>
      <input type="number" id="donationamount" name="donationamount" step="0.01" required>
    </div>

    <!-- Mock-up credit card fields (cosmetic only) -->
    <div>
      <label>Card Number:</label>
      <input type="text" placeholder="XXXX XXXX XXXX XXXX">
    </div>
    <div>
      <label>Expiration Date:</label>
      <input type="text" placeholder="MM/YY">
    </div>
    <div>
      <label>CVC:</label>
      <input type="text" placeholder="CVC">
    </div>

<!-- Hidden field for memberID if logged in -- associates the donation to the member. This is null if you're a guest. -->
    <input type="hidden" name="memberid" value="<%= userID %>">

    <button type="submit">Submit Donation</button>
  </form>
</body>
</html>
