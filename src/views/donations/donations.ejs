<!-- This page is visible to all users, and everyone can add a donation. -->
<!-- Only admins can see and use the delete button. -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %> · Ella Rises</title>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600;700&display=swap"
    rel="stylesheet">

  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    rel="stylesheet">
  <link href="/css/styles.css" rel="stylesheet" />
</head>
<body>

<!-- this shows up in a lot of places. It puts the header from header.ejs on the page. -->
  <%- include('../../partials/header') %>

  <div class="container">
    <div class="page-header">
      <h1 class="page-title">Donations</h1>
      <p class="page-subtitle">
        Track and manage donations supporting Ella Rises programs and initiatives.
      </p>
    </div>

<!-- whole lotta bootstrap -->    
    <div class="row mb-4">
      <div class="col-md-4 mb-3">
        <div class="card program-card h-100">
          <div class="card-body text-center">
            <i class="fas fa-dollar-sign fa-3x text-primary mb-3"></i>
            <h5 class="card-title">Total Donations</h5>

<!-- passes in the variable from the get route for this page and operates on it. -->
            <h3 class="text-primary">$<%= totalAmount //? totalAmount.toLocaleString() : '0' %></h3>
            <small class="text-muted">All time contributions</small>
          </div>
        </div>
      </div>
      <div class="col-md-4 mb-3">
        <div class="card program-card h-100">
          <div class="card-body text-center">
            <i class="fas fa-users fa-3x text-info mb-3"></i>
            <h5 class="card-title">Donations</h5>
            <h3 class="text-info"><%= donations ? donations.length : 0 %></h3>
            <small class="text-muted">Total donations</small>
          </div>
        </div>
      </div>
    </div>

<!-- the search actually works! ... I hope you expected that. -->    
    <div class="data-card">
      <div class="search-row">
        <input
          type="text"
          class="form-control"
          placeholder="Search by donor name or type">
        <button class="btn btn-outline-primary btn-sm-pill" type="button">
          Search
        </button>
      </div>

<!-- this table changes to have a column for the delete button if you're an admin. -->
<!-- As you should hopefully expect, this (and all other changes to literally everything on this site) do actually affect the database. -->
<!-- the delete button, as you may expect, only deletes the record for the specific one you clicked on, courtesy of ... variables! woohoo! -->
      <div class="table-responsive">
        <table class="table align-middle mb-0">
          <thead>
            <tr>
              <th>Donor</th>
              <th>Amount</th>
              <th>Date</th>
              <% if (userRole === "admin") { %>
                <th></th>
              <% } %>
            </tr>
          </thead>
          <tbody>
            <% if (donations && donations.length > 0) { %>
              <% donations.forEach(donation => { %>
                <tr>
                  <td>
                    <%= donation.donorname %>
                  </td>
                  <td class="fw-bold">$<%= donation.donationamount ? donation.donationamount.toLocaleString() : '0' %></td>
                  <td><%= donation.donationdate ? donation.donationdate.toLocaleDateString() : 'N/A' %></td>
                  <td>
                    <% if (userRole === "admin") { %>
                      <form action="/deleteDonation/<%= donation.donationid %>" method="post">
                        <button class="btn btn-outline-primary btn-sm-pill" type="submit">
                          Delete
                        </button>
                      </form>
                    <% } %>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="6" class="text-center text-muted">
                  No donations to display yet.
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>

<!-- Why they opted to do a partials for the header but manually put in the footer, I may never know. -->
<!-- Also we do NOT have a copyright this mans is lying out his teeth. -->
    <div class="footer">
      &copy; <%= new Date().getFullYear() %> Ella Rises · Donations
    </div>
  </div>

<!-- heh ... bootstwap -->
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js">
  </script>
</body>
</html>
