<!-- This page should only be visible to logged-in users. -->
<!-- The CRUD functionality should only be visible/available to admins. -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %> · Ella Rises</title>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600;700&display=swap"
    rel="stylesheet">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/styles.css" rel="stylesheet" />
</head>

<body>
  <%- include('../../partials/header') %>

  <div class="container">

    <!-- HEADER -->
    <div class="page-header">
      <h1 class="page-title">Donations</h1>
      <p class="page-subtitle">Manage and review all financial contributions to Ella Rises.</p>
    </div>

    <!-- SUMMARY CARDS -->
    <div class="row mb-4">
      <div class="col-md-6 mb-3">
        <div class="program-card h-100 text-center">
          <h5>Total Donation Amount</h5>
          <h3 class="text-success">$<%= totalAmount.toLocaleString() %></h3>
          <small class="text-muted">Across all donations</small>
        </div>
      </div>

      <div class="col-md-6 mb-3">
        <div class="program-card h-100 text-center">
          <h5>Number of Donations</h5>
          <h3 class="text-primary"><%= donations.length %></h3>
          <small class="text-muted">This page</small>
        </div>
      </div>
    </div>

    <!-- DATA CARD -->
    <div class="data-card">
      
      <!-- SEARCH BAR -->
      <div class="search-row">
        <form action="/donations" method="GET" class="d-flex w-100" style="gap: 10px;">
          <input
            type="text"
            name="search"
            class="form-control"
            placeholder="Search by donor, amount, or date"
            value="<%= search %>"
          >

          <button class="btn btn-outline-primary btn-sm-pill" type="submit">Search</button>

          <a href="/donations" class="btn btn-secondary btn-sm-pill">Clear</a>

          <% if (userRole === 'admin') { %>
            <a href="/donationAdd" class="btn btn-primary btn-sm-pill ms-auto">+ Add Donation</a>
          <% } %>
        </form>
      </div>

      <!-- TABLE -->
      <div class="table-responsive">
        <table class="table align-middle mb-0">
          <thead>
            <tr>
              <th>Donor</th>
              <th>Amount</th>
              <th>Date</th>
              <% if (userRole === "admin") { %>
                <th></th> <!-- Delete -->
              <% } %>
            </tr>
          </thead>

          <tbody>
            <% if (donations && donations.length > 0) { %>
              <% donations.forEach(d => { %>
                <tr>
                  <td><%= d.donorname %></td>
                  <td class="fw-bold">$<%= Number(d.donationamount).toLocaleString() %></td>
                  <td><%= d.donationdate ? new Date(d.donationdate).toLocaleDateString() : "N/A" %></td>

                  <% if (userRole === "admin") { %>
                  <td>
                    <form action="/deleteDonation/<%= d.donationid %>" 
                          method="POST"
                          onsubmit="return confirm('Are you sure you want to delete this donation?');">
                      <button class="btn btn-outline-primary btn-sm-pill" type="submit">Delete</button>
                    </form>
                  </td>
                  <% } %>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="10" class="text-center text-muted">
                  No donations found.
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>

      <!-- PAGINATION -->
      <div class="pagination mt-3 d-flex justify-content-center gap-2">
        <% if (totalPages > 1) { %>

          <!-- Prev -->
          <a class="btn btn-outline-primary btn-sm-pill <%= currentPage === 1 ? 'disabled' : '' %>"
             href="<%= currentPage > 1 ? `/donations?page=${currentPage - 1}&search=${search}` : '#' %>">
            ← Prev
          </a>

          <% const start = Math.max(1, currentPage - 2); %>
          <% const end = Math.min(totalPages, currentPage + 2); %>

          <% for (let i = start; i <= end; i++) { %>
            <a class="btn btn-sm-pill <%= i === currentPage ? 'btn-primary' : 'btn-outline-primary' %>"
               href="/donations?page=<%= i %>&search=<%= search %>">
              <%= i %>
            </a>
          <% } %>

          <!-- Next -->
          <a class="btn btn-outline-primary btn-sm-pill <%= currentPage === totalPages ? 'disabled' : '' %>"
             href="<%= currentPage < totalPages ? `/donations?page=${currentPage + 1}&search=${search}` : '#' %>">
            Next →
          </a>

        <% } %>
      </div>

    </div>

    <div class="footer">
      &copy; <%= new Date().getFullYear() %> Ella Rises · Donations
    </div>

  </div>

</body>
</html>