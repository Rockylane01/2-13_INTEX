<!-- This page should only be visible to logged-in users. -->
<!-- The CRUD functionality should only be visible/available to admins. -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %> · Ella Rises</title>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600;700&display=swap"
    rel="stylesheet">

  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    rel="stylesheet">
  <link href="/css/styles.css" rel="stylesheet" />
</head>
<body>
  <%- include('../../partials/header') %>

  <div class="container">
    <div class="page-header">
      <h1 class="page-title">Donations</h1>
      <p class="page-subtitle">
        Track and manage donations supporting Ella Rises programs and initiatives.
      </p>
    </div>

    <!-- Donation Summary Cards -->
    <div class="row mb-4">
      <div class="col-md-4 mb-3">
        <div class="card program-card h-100">
          <div class="card-body text-center">
            <i class="fas fa-dollar-sign fa-3x text-primary mb-3"></i>
            <h5 class="card-title">Total Donations</h5>
            <h3 class="text-primary">$<%= totalAmount //? totalAmount.toLocaleString() : '0' %></h3>
            <small class="text-muted">All time contributions</small>
          </div>
        </div>
      </div>
      <div class="col-md-4 mb-3">
        <div class="card program-card h-100">
          <div class="card-body text-center">
            <i class="fas fa-users fa-3x text-info mb-3"></i>
            <h5 class="card-title">Donations</h5>
            <h3 class="text-info"><%= donations ? donations.length : 0 %></h3>
            <small class="text-muted">Total donations</small>
          </div>
        </div>
      </div>
    </div>

    <div class="data-card">
      <div class="search-row">
        <input
          type="text"
          class="form-control"
          placeholder="Search by donor name or type">
        <button class="btn btn-outline-primary btn-sm-pill" type="button">
          Search
        </button>
        <!-- later: only show this button if user is a manager -->
        <button class="btn btn-primary btn-sm-pill ms-auto" type="button">
          Add donation
        </button>
      </div>

      <div class="table-responsive">
        <table class="table align-middle mb-0">
          <thead>
            <tr>
              <th>Donor</th>
              <th>Amount</th>
              <th>Date</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% if (donations && donations.length > 0) { %>
              <% donations.forEach(donation => { %>
                <tr>
                  <td>
                    <%= donation.memberfirstname %>
                  </td>
                  <td class="fw-bold">$<%= donation.donationamount ? donation.donationamount.toLocaleString() : '0' %></td>
                  <td><%= donation.donationdate ? donation.donationdate.toLocaleDateString() : 'N/A' %></td>
                  <td>
                    <% if (userRole === "admin") { %>
                      <a href="/editdonation/<%= donation.donationid %>" class="btn btn-outline-primary btn-sm-pill">
                        Edit
                      </a>
                    <% } %>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="6" class="text-center text-muted">
                  No donations to display yet.
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="footer">
      &copy; <%= new Date().getFullYear() %> Ella Rises · Donations
    </div>
  </div>

  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js">
  </script>
</body>
</html>
