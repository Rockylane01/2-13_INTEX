<!-- This page should only be accessible to logged-in admins. -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %> · Ella Rises</title>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600;700&display=swap"
    rel="stylesheet">

  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    rel="stylesheet">
  <link href="/css/styles.css" rel="stylesheet" />
</head>
<body>
  <%- include('../../partials/header') %>

  <div class="container">
    <div class="page-header">
      <h1 class="page-title">Users</h1>
      <p class="page-subtitle">
        Manage organization members and their participation in Ella Rises programs.
      </p>
    </div>

    <div class="data-card">
      <div class="search-row">
        <form action="/users" method="GET" class="d-flex w-100" style="gap: 10px;">
          <input
            type="text"
            name="search"
            class="form-control"
            placeholder="Search by first name, last name, or email"
            value="<%= typeof search !== 'undefined' ? search : '' %>"
          >
      
          <button class="btn btn-outline-primary btn-sm-pill" type="submit">
            Search
          </button>
      
          <a href="/users" class="btn btn-secondary btn-sm-pill">Clear</a>
      
        </form>
      </div>    

      <div class="table-responsive">
        <table class="table align-middle mb-0">
          <thead>
            <tr>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Email</th>
              <% if (user && user.userRole === "admin") { %>
              <th></th>
              <th></th>
              <th></th>
              <% } %>
            </tr>
          </thead>
          <tbody>
            <% if (users && users.length > 0) { %>
              <% users.forEach(user => { %>
                <tr>
                  <td><%= user.memberfirstname %></td>
                  <td><%= user.memberlastname || 'N/A' %></td>
                  <td><%= user.memberemail || 'N/A' %></td>
                  <!-- View Profile (admins only) -->
                    <% if (user && user.userRole === "admin") { %>
                    <td>
                      <form action="/user_profile/<%= user.memberid %>" method="GET">
                        <button class="btn btn-outline-primary btn-sm-pill" type="submit">View Profile</button>
                      </form>
                    </td>
                    <% } %>

                  <!-- Edit (admins only) -->
                    <% if (user && user.userRole === "admin") { %>
                    <td>
                      <form action="/editUser/<%= user.memberid %>" method="GET">
                        <button class="btn btn-outline-primary btn-sm-pill" type="submit">Edit</button>
                      </form>
                    </td>
                    <% } %>

                  <!-- Delete (admins only) -->
                    <% if (user && user.userRole === "admin") { %>
                    <td>
                      <form action="/deleteUser/<%= user.memberid %>" 
                        method="POST"
                        onsubmit="return confirm('Are you sure you want to delete this user? This cannot be undone.');">
                        <button class="btn btn-outline-primary btn-sm-pill" type="submit">Delete</button>
                      </form>
                    </td>
                    <% } %>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="10" class="text-center text-muted">
                  No users to display yet.
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
        <!-- Compact Pagination -->
        <div class="pagination mt-3 d-flex align-items-center justify-content-center gap-2">

          <% if (totalPages > 1) { %>

            <!-- Previous -->
            <a class="btn btn-outline-primary btn-sm-pill <%= currentPage === 1 ? 'disabled' : '' %>"
              href="<%= currentPage > 1 ? `/users?page=${currentPage - 1}&search=${search}` : '#' %>">
              ← Prev
            </a>

            <% 
              // Determine the page window
              const startPage = Math.max(1, currentPage - 2);
              const endPage = Math.min(totalPages, currentPage + 2);
            %>

            <!-- Page number buttons -->
            <% for (let i = startPage; i <= endPage; i++) { %>
              <a class="btn btn-sm-pill <%= i === currentPage ? 'btn-primary' : 'btn-outline-primary' %>"
                href="/users?page=<%= i %>&search=<%= search %>">
                <%= i %>
              </a>
            <% } %>

            <!-- Next -->
            <a class="btn btn-outline-primary btn-sm-pill <%= currentPage === totalPages ? 'disabled' : '' %>"
              href="<%= currentPage < totalPages ? `/users?page=${currentPage + 1}&search=${search}` : '#' %>">
              Next →
            </a>

          <% } %>

        </div>
      </div>
    </div>

    <div class="footer">
      &copy; <%= new Date().getFullYear() %> Ella Rises · Members
    </div>
  </div>

  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js">
  </script>
</body>
</html>
