<!-- This page is only be accessible to logged-in users, and they can only view their own profile. Unless they're an admin hey ho -->
<!-- admin-only data includes email, address, phone number, total donations, edit buttons (user and milestone) -->
<!-- total donations should probably be calculated by a sql query, instead of having a column in the database. -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %> · Ella Rises</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600;700&display=swap"
    rel="stylesheet">
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    rel="stylesheet">
  <link href="/css/styles.css" rel="stylesheet" />
</head>

<body>
  <%- include('../../partials/header') %>

  <div class="container">
    <div class="page-header">
      <div class="d-flex align-items-center justify-content-between">
        <div>
          <h1 class="page-title">User Profile</h1>
        </div>
        <a href="/users" class="btn btn-outline-primary">View Users</a>
      </div>
    </div>

<!-- user profile info is passed in by the route, but also because the memberid is in the url. -->
    <div class="row mb-4">
      <div class="col-lg-12">
        <div class="card profile-card">
          <div class="card-body">
            <div class="d-flex align-items-start">
              <div class="flex-grow-1">
                <h3 class="card-title mb-1"><%= profileUser.memberfirstname %> <%= profileUser.memberlastname %></h3>
                <p class="text-muted mb-3"><%= profileUser.memberemail %></p>
                <div class="row">
                  <div class="col-md-4">
                    <div class="profile-info-item">
                      <strong>Phone Number:</strong>
                      <span class="ms-2"><%= profileUser.memberphone ? profileUser.memberphone : 'N/A' %></span>
                    </div>
                    <div class="profile-info-item">
                      <strong>Location:</strong>
                      <span class="ms-2"><%= profileUser.membercity + ', ' + profileUser.memberstate + ' ' + profileUser.memberzip%></span>
                    </div>
                    <div class="profile-info-item">
                      <strong>DOB:</strong>
                        <span><%= profileUser.memberdob.toLocaleDateString() %></span>
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="profile-info-item">
                      <strong>Employer / School:</strong>
                        <span><%= profileUser.memberschooloremployer %></span>
                    </div>
                    <div class="profile-info-item">
                      <strong>Field of Interest:</strong>
                        <span><%= profileUser.memberfieldofinterest %></span>
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="profile-info-item">
                      <strong>Total Donations:</strong>
                        <span><%= profileUser.totaldonations ? '$' + profileUser.totaldonations : '$0' %></span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

<!-- Accomplished Milestones Section -->
    <div class="data-card">
      <div class="d-flex align-items-center justify-content-between mb-3">
        <h4 class="mb-0">Milestones</h4>
        <div class="d-flex align-items-center gap-2">
          <% if (milestones.length > 0) { %>
            <small class="text-muted"><%= milestones.length %> milestone<%= milestones.length === 1 ? '' : 's' %> completed</small>
          <% } %>
            <form action="/milestoneAdd/user_profile">
              <button type="submit" class="btn btn-primary btn-sm">
                <i class="fas fa-plus me-1"></i>Add Milestone
              </button>
            </form>
        </div>
      </div>

      <% if (milestones.length > 0) { %>
        <div class="row">
          <% milestones.forEach(milestone => { %>
            <div class="col-md-6 col-lg-4 mb-4">
              <div class="card milestone-card h-100">
                <div class="card-body">
                      <div class="d-flex align-items-center mb-3">
                    <div class="flex-grow-1">
                      <h6 class="card-title mb-1"><%= milestone.milestonetitle %></h6>
                      <span class="text-muted"><%= milestone.milestonedate.toLocaleDateString() %></span>
                      <div class="mt-2">
                        <a href="/milestoneEdit/<%= milestone.memberid %>/<%= encodeURIComponent(milestone.milestonetitle) %>?ref=user_profile" class="text-decoration-none me-3">Edit</a>
                        <!-- Delete form -->
                        <form action="/deleteMilestone/<%= milestone.memberid %>/<%= encodeURIComponent(milestone.milestonetitle) %>" method="POST" class="d-inline">
                          <button class="btn btn-link text-danger p-0 text-decoration-none" type="submit">Delete</button>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <div class="text-center py-5">
          <i class="fas fa-trophy fa-4x text-muted mb-3"></i>
          <h5 class="text-muted">No Milestones Accomplished Yet</h5>
          <p class="text-muted">This user hasn't completed any milestones yet.</p>
<!-- so sadge -->
        </div>
      <% } %>
    </div>

    <div class="footer">
      &copy; <%= new Date().getFullYear() %> Ella Rises · User Profile
    </div>
  </div>

  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js">
  </script>
</body>
</html>
