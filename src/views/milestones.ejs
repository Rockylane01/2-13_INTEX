<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %> · Ella Rises</title>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600;700&display=swap"
    rel="stylesheet">

  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    rel="stylesheet">
  <link href="/css/styles.css" rel="stylesheet" />
</head>
<body>
  <%- include('../partials/header') %>

  <div class="container">
    <div class="page-header">
      <h1 class="page-title">Milestones</h1>
      <p class="page-subtitle">
        Track and celebrate participant achievements and educational milestones.
      </p>
    </div>

    <!-- Milestones Summary Cards -->
    <div class="row mb-4">
      <div class="col-md-4 mb-3">
        <div class="card program-card h-100">
          <div class="card-body text-center">
            <i class="fas fa-trophy fa-3x text-warning mb-3"></i>
            <h5 class="card-title">Total Milestones</h5>
            <h3 class="text-warning"><%= milestones ? milestones.length : 0 %></h3>
            <small class="text-muted">All achievements</small>
          </div>
        </div>
      </div>
      <div class="col-md-4 mb-3">
        <div class="card program-card h-100">
          <div class="card-body text-center">
            <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
            <h5 class="card-title">Completed</h5>
            <h3 class="text-success"><%= milestones ? milestones.filter(m => m.isCompleted).length : 0 %></h3>
            <small class="text-muted">Achieved goals</small>
          </div>
        </div>
      </div>
      <div class="col-md-4 mb-3">
        <div class="card program-card h-100">
          <div class="card-body text-center">
            <i class="fas fa-clock fa-3x text-info mb-3"></i>
            <h5 class="card-title">In Progress</h5>
            <h3 class="text-info"><%= milestones ? milestones.filter(m => !m.isCompleted).length : 0 %></h3>
            <small class="text-muted">Active goals</small>
          </div>
        </div>
      </div>
    </div>

    <div class="data-card">
      <div class="search-row">
        <input
          type="text"
          class="form-control"
          placeholder="Search by participant name or milestone title">
        <button class="btn btn-outline-primary btn-sm-pill" type="button">
          Search
        </button>
        <!-- later: only show this button if user is a manager -->
        <button class="btn btn-primary btn-sm-pill ms-auto" type="button">
          Add Milestone
        </button>
      </div>

      <div class="table-responsive">
        <table class="table align-middle mb-0">
          <thead>
            <tr>
              <th>Participant</th>
              <th>Milestone</th>
              <th>Type</th>
              <th>Status</th>
              <th>Target Date</th>
              <th>Achievement Date</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (milestones && milestones.length > 0) { %>
              <% milestones.forEach(milestone => { %>
                <tr>
                  <td>
                    <div>
                      <strong><%= milestone.participantName %></strong>
                      <br><small class="text-muted"><%= milestone.participantEmail %></small>
                    </div>
                  </td>
                  <td>
                    <strong><%= milestone.title %></strong>
                    <% if (milestone.description) { %>
                      <br><small class="text-muted"><%= milestone.description.substring(0, 50) %>...</small>
                    <% } %>
                  </td>
                  <td>
                    <span class="badge bg-primary"><%= milestone.type %></span>
                  </td>
                  <td>
                    <% if (milestone.isCompleted) { %>
                      <span class="badge bg-success">Completed</span>
                    <% } else { %>
                      <span class="badge bg-warning">In Progress</span>
                    <% } %>
                  </td>
                  <td><%= milestone.targetDate ? new Date(milestone.targetDate).toLocaleDateString() : 'Not set' %></td>
                  <td><%= milestone.achievementDate ? new Date(milestone.achievementDate).toLocaleDateString() : 'Pending' %></td>
                  <td>
                    <!-- later: wrap these in manager-only checks -->
                    <button class="btn btn-outline-primary btn-sm-pill">
                      View
                    </button>
                    <button class="btn btn-outline-primary btn-sm-pill">
                      Edit
                    </button>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="7" class="text-center text-muted">
                  No milestones to display yet.
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="footer">
      &copy; <%= new Date().getFullYear() %> Ella Rises · Milestones
    </div>
  </div>

  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js">
  </script>
</body>
</html>
