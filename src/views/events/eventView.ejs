<!-- This page should only be visible to logged-in users. -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %> Â· Ella Rises</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/styles.css" rel="stylesheet" />
</head>
<body>
    <%- include('../../partials/header') %>

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2>
                    <i class="fas fa-calendar-check me-3"></i>
                    <%= event.eventname %>
                </h2>
                <p class="text-muted mb-0"><%= event.eventdescription %></p>
            </div>
            <div>
                <a href="/events" class="btn btn-outline-secondary me-2">
                    <i class="fas fa-arrow-left me-1"></i>Back to Events
                </a>
                <a href="/editEvent/<%= event.eventid %>" class="btn btn-primary">
                    <i class="fas fa-edit me-1"></i>Edit Event
                </a>
            </div>
        </div>

        <div class="row">
            <!-- Event Details -->
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Event Details</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h6 class="text-muted">Date & Time</h6>
                                <p class="mb-1">
                                    <i class="fas fa-calendar-alt me-2"></i>
                                    <strong>Start:</strong> <%= new Date(event.eventdatetimestart).toLocaleString() %>
                                </p>
                                <p class="mb-3">
                                    <i class="fas fa-calendar-times me-2"></i>
                                    <strong>End:</strong> <%= new Date(event.eventdatetimeend).toLocaleString() %>
                                </p>

                                <h6 class="text-muted">Location</h6>
                                <p class="mb-3">
                                    <i class="fas fa-map-marker-alt me-2"></i>
                                    <%= event.eventlocation %>
                                </p>
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-muted">Capacity & Registration</h6>
                                <p class="mb-1">
                                    <i class="fas fa-users me-2"></i>
                                    <strong>Capacity:</strong> <%= event.eventcapacity %> participants
                                </p>
                                <p class="mb-1">
                                    <i class="fas fa-user-check me-2"></i>
                                    <strong>Registered:</strong> <%= event.registeredcount || 0 %> participants
                                </p>
                                <p class="mb-3">
                                    <i class="fas fa-clock me-2"></i>
                                    <strong>Registration Deadline:</strong> <%= new Date(event.eventregistrationdeadline).toLocaleString() %>
                                </p>
                            </div>
                        </div>

                        <div class="mt-3">
                            <h6 class="text-muted">Event Type</h6>
                            <span class="badge bg-primary"><%= event.eventtype %></span>
                            <% if (event.eventrecurrencepattern) { %>
                                <span class="badge bg-secondary ms-2"><%= event.eventrecurrencepattern %></span>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Registration Status -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Registration Status</h5>
                    </div>
                    <div class="card-body">
                        <% if (event.registeredcount !== undefined && event.eventcapacity !== undefined) { %>
                            <% const percentage = Math.round((event.registeredcount / event.eventcapacity) * 100); %>
                            <div class="mb-3">
                                <div class="d-flex justify-content-between">
                                    <span>Registration Progress</span>
                                    <span><%= percentage %>%</span>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar <%= percentage >= 100 ? 'bg-danger' : percentage >= 80 ? 'bg-warning' : 'bg-success' %>"
                                         role="progressbar"
                                         style="width: <%= Math.min(percentage, 100) %>%"
                                         aria-valuenow="<%= percentage %>"
                                         aria-valuemin="0"
                                         aria-valuemax="100"></div>
                                </div>
                            </div>

                            <% if (percentage >= 100) { %>
                                <div class="alert alert-danger">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    Event is at full capacity!
                                </div>
                            <% } else if (percentage >= 80) { %>
                                <div class="alert alert-warning">
                                    <i class="fas fa-exclamation-circle me-2"></i>
                                    Event is nearing capacity.
                                </div>
                            <% } %>
                        <% } %>

                        <div class="d-grid gap-2">
                            <button class="btn btn-success">
                                <i class="fas fa-plus me-1"></i>Add Participant
                            </button>
                            <button class="btn btn-info">
                                <i class="fas fa-list me-1"></i>View Registrations
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Participants Section -->
        <% if (participants && participants.length > 0) { %>
            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="mb-0">Registered Participants (<%= participants.length %>)</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Registration Status</th>
                                    <th>Check-in Time</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% participants.forEach(participant => { %>
                                    <tr>
                                        <td><%= participant.memberfirstname %> <%= participant.memberlastname %></td>
                                        <td><%= participant.memberemail %></td>
                                        <td>
                                            <span class="badge <%= participant.registrationstatus === 'Confirmed' ? 'bg-success' : participant.registrationstatus === 'Pending' ? 'bg-warning' : 'bg-secondary' %>">
                                                <%= participant.registrationstatus %>
                                            </span>
                                        </td>
                                        <td><%= participant.registrationcheckintime ? new Date(participant.registrationcheckintime).toLocaleString() : 'Not checked in' %></td>
                                        <td>
                                            <a href="/user_profile/<%= participant.memberid %>" class="btn btn-sm btn-outline-primary">View Profile</a>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
