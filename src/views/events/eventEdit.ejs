<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %> Â· Ella Rises</title>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/styles.css" rel="stylesheet" />
</head>
<body>
  <%- include('../../partials/header') %>

  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h1><%= event?.eventid ? "Edit Event" : "Add New Event" %></h1>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <form action="/eventEdit" method="POST">
          <!-- Hidden event ID for edits -->
          <% if (event?.eventid) { %>
            <input type="hidden" name="eventid" value="<%= event.eventid %>">
          <% } %>

          <!-- Event Template Dropdown -->
          <label for="eventtemplate" class="form-label">Event Template</label>
          <select name="eventtemplate" id="eventtemplate" class="form-select mb-3" required>
            <% eventtemplates.forEach(template => { %>
              <option value="<%= template.templateid %>" 
                <%= event?.templateid === template.templateid ? 'selected' : '' %>>
                <%= template.eventname %>
              </option>
            <% }) %>
          </select>

          <!-- Event fields -->
          <label for="eventdatetimestart" class="form-label">Event Start</label>
          <input type="datetime-local" class="form-control mb-3" name="eventdatetimestart" 
            value="<%= event?.eventdatetimestart ? event.eventdatetimestart.toISOString().slice(0,16) : '' %>" required>

          <label for="eventdatetimeend" class="form-label">Event End</label>
          <input type="datetime-local" class="form-control mb-3" name="eventdatetimeend" 
            value="<%= event?.eventdatetimeend ? event.eventdatetimeend.toISOString().slice(0,16) : '' %>" required>

          <label for="eventlocation" class="form-label">Event Location</label>
          <input type="text" class="form-control mb-3" name="eventlocation" 
            value="<%= event?.eventlocation || '' %>" maxlength="100" required>

          <label for="eventcapacity" class="form-label">Event Capacity</label>
          <input type="number" class="form-control mb-3" name="eventcapacity" 
            value="<%= event?.eventcapacity || '' %>" min="0" max="9999" required>

          <label for="eventregistrationdeadline" class="form-label">Registration Deadline</label>
          <input type="datetime-local" class="form-control mb-3" name="eventregistrationdeadline" 
            value="<%= event?.eventregistrationdeadline ? event.eventregistrationdeadline.toISOString().slice(0,16) : '' %>" required>


          <button type="submit" class="btn btn-primary">Save Event</button>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
