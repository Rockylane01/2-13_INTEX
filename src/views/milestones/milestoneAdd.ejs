<!-- This page should only be visible to logged-in admins, OR the user to whom the milestone belongs. -->
<!-- This page should also be visible to users under the guise of "add milestone", unless we make that a separate page. -->
<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Add Milestone</title>
</head>
<body>

  <h1>Add Milestone</h1>

  <!-- Add form -->
  <form action="/milestoneAdd" method="POST">
    <input type="hidden" name="memberid" value="<%= memberid %>">

    <label>Milestone Title:</label>
    <input type="text" name="milestonetitle" required>

    <label>Achievement Date:</label>
    <input type="date" name="milestonedate" required>

    <input type="hidden" name="ref" value="<%= ref %>">
    <button type="submit">Save Changes</button>
  </form>

  <!-- Back link -->
  <a href="/<%= ref === 'user_profile' ? `user_profile/${memberid}` : 'milestones' %>">Back</a>

</body>
</html>
