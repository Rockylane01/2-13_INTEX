<!-- This page should be visible guests. -->
<!-- Edit and delete buttons should only be visible to logged-in admins and the user to whom the milestone belongs. -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %> · Ella Rises</title>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600;700&display=swap"
    rel="stylesheet">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/styles.css" rel="stylesheet" />
</head>

<body>
  <%- include('../../partials/header') %>

  <div class="container">

    <!-- PAGE HEADER -->
    <div class="page-header d-flex justify-content-between align-items-center">
      <div>
        <h1 class="page-title">Milestones</h1>
        <p class="page-subtitle">
          Track and celebrate participant achievements and educational milestones.
        </p>
      </div>

      <% if (userRole === 'admin' || userRole === 'participant') { %>
        <a href="/milestoneAdd/milestones" class="btn btn-primary btn-sm-pill">
          <i class="fas fa-plus me-1"></i>Add Milestone
        </a>
      <% } %>
    </div>

    <!-- SUMMARY CARDS -->
    <div class="row mb-4">
      <div class="col-md-6 mb-3">
        <div class="program-card h-100 text-center">
          <h5>Total Milestones</h5>
          <h3 class="text-warning"><%= totalCount %></h3>
          <small class="text-muted">All achievements</small>
        </div>
      </div>

      <div class="col-md-6 mb-3">
        <div class="program-card h-100 text-center">
          <h5>Participants with Milestones</h5>
          <h3 class="text-success"><%= uniqueMembers %></h3>
          <small class="text-muted">Individual contributors</small>
        </div>
      </div>
    </div>

    <div class="data-card">

      <!-- SEARCH BAR -->
      <div class="search-row">
        <form action="/milestones" method="GET" class="d-flex w-100" style="gap: 10px;">
          <input
            type="text"
            name="search"
            class="form-control"
            placeholder="Search by participant or milestone title"
            value="<%= search %>"
          >

          <button class="btn btn-outline-primary btn-sm-pill" type="submit">Search</button>

          <a href="/milestones" class="btn btn-secondary btn-sm-pill">Clear</a>
        </form>
      </div>

      <!-- TABLE -->
      <div class="table-responsive">
        <table class="table align-middle mb-0">
          <thead>
            <tr>
              <th>Participant</th>
              <th>Milestone</th>
              <th>Date</th>
              <% if (userRole === "admin") { %>
                <th></th> <!-- Edit -->
                <th></th> <!-- Delete -->
              <% } %>
            </tr>
          </thead>

          <tbody>
            <% if (milestones && milestones.length > 0) { %>
              <% milestones.forEach(m => { %>
                <tr>
                  <td><%= m.memberfirstname %> <%= m.memberlastname %></td>
                  <td><%= m.milestonetitle %></td>
                  <td><%= new Date(m.milestonedate).toLocaleDateString() %></td>

                  <% if (userRole === 'admin') { %>
                    <td>
                      <a href="/milestoneEdit/<%= m.memberid %>/<%= encodeURIComponent(m.milestonetitle) %>"
                        class="btn btn-outline-primary btn-sm-pill">
                        Edit
                      </a>
                    </td>

                    <td>
                      <form 
                        action="/deleteMilestone/<%= m.memberid %>/<%= encodeURIComponent(m.milestonetitle) %>"
                        method="POST"
                        onsubmit="return confirm('Are you sure you want to delete this milestone?');"
                      >
                        <button type="submit" class="btn btn-outline-primary btn-sm-pill">
                        Delete
                      </button>
                      </form>
                    </td>
                  <% } %>

                </tr>
              <% }) %>

            <% } else { %>
              <tr>
                <td colspan="10" class="text-center text-muted">
                  No milestones to display yet.
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>

        <!-- PAGINATION -->
        <div class="pagination mt-3 d-flex align-items-center justify-content-center gap-2">
          <% if (totalPages > 1) { %>

            <!-- PREV -->
            <a class="btn btn-outline-primary btn-sm-pill <%= currentPage === 1 ? 'disabled' : '' %>"
               href="<%= currentPage > 1 ? `/milestones?page=${currentPage - 1}&search=${search}` : '#' %>">
              ← Prev
            </a>

            <% const startPage = Math.max(1, currentPage - 2); %>
            <% const endPage = Math.min(totalPages, currentPage + 2); %>

            <% for (let i = startPage; i <= endPage; i++) { %>
              <a class="btn btn-sm-pill <%= i === currentPage ? 'btn-primary' : 'btn-outline-primary' %>"
                 href="/milestones?page=<%= i %>&search=<%= search %>">
                <%= i %>
              </a>
            <% } %>

            <!-- NEXT -->
            <a class="btn btn-outline-primary btn-sm-pill <%= currentPage === totalPages ? 'disabled' : '' %>"
               href="<%= currentPage < totalPages ? `/milestones?page=${currentPage + 1}&search=${search}` : '#' %>">
              Next →
            </a>

          <% } %>
        </div>

      </div>
    </div>

    <div class="footer">
      &copy; <%= new Date().getFullYear() %> Ella Rises · Milestones
    </div>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>