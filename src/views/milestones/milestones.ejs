<!-- This page should be visible guests. -->
<!-- Edit and delete buttons should only be visible to logged-in admins and the user to whom the milestone belongs. -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %> · Ella Rises</title>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600;700&display=swap"
    rel="stylesheet">

  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    rel="stylesheet">
  <link href="/css/styles.css" rel="stylesheet" />
</head>
<body>
  <%- include('../../partials/header') %>

  <div class="container">
    <div class="page-header">
      <h1 class="page-title">Milestones</h1>
      <p class="page-subtitle">
        Track and celebrate participant achievements and educational milestones.
      </p>
    </div>

    <!-- Milestones Summary Cards -->
    <div class="row mb-4">
      <div class="col-md-6 mb-3">
        <div class="card program-card h-100">
          <div class="card-body text-center">
            <h5 class="card-title">Total Milestones</h5>
            <h3 class="text-warning"><%= milestones ? milestones.length : 0 %></h3>
            <small class="text-muted">All achievements</small>
          </div>
        </div>
      </div>
      <div class="col-md-6 mb-3">
        <div class="card program-card h-100">
          <div class="card-body text-center">
            <h5 class="card-title">...</h5>
            <h3 class="text-success">...</h3>
            <small class="text-muted">...</small>
          </div>
        </div>
      </div>
    </div>

    <div class="data-card">
      <div class="search-row">
        <input type="text" class="form-control" placeholder="Search by participant name or milestone title">
        <button class="btn btn-outline-primary btn-sm-pill" type="button">Search</button>
        <!-- later: only show this button if user is a manager -->
        <button class="btn btn-primary btn-sm-pill ms-auto" type="button">Add Milestone</button>
      </div>

      <div class="table-responsive">
        <table class="table align-middle mb-0">
          <thead>
            <tr>
              <th>Participant</th>
              <th>Milestone</th>
              <th>Achievement Date</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% if (milestones && milestones.length > 0) { %>
              <% milestones.forEach(milestone => { %>
                <tr>
                  <td><%= milestone.memberfirstname %></td>
                  <td><%= milestone.milestonetitle %></td>
                  <td><%= milestone.milestonedate.toLocaleDateString() %></span></td>
                  <% if (userRole === 'admin' || milestone.memberid === userID) { %>
                    <td>
                      <a href="/milestoneEdit/<%= milestone.memberid %>/<%= encodeURIComponent(milestone.milestonetitle) %>"
                        class="btn btn-outline-primary btn-sm-pill">
                        Edit
                      </a>
                    </td>
                  <% } else { %>
                    <td></td>
                  <% } %>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="7" class="text-center text-muted">
                  No milestones to display yet.
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="footer">
      &copy; <%= new Date().getFullYear() %> Ella Rises · Milestones
    </div>
  </div>

  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js">
  </script>
</body>
</html>
